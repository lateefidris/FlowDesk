<div class="flex flex-col items-center justify-center w-full mt-8 px-4">
  <h1 class="text-3xl md:text-5xl font-bold text-center">Availability</h1>
  <div class="text-lg md:text-xl mb-3 text-center">
    <%= link_to "Add Day", new_availability_path, class: "text-black hover:text-orange-800" %>
  </div>
<div id="availabilities">
  <% current_user.desks.availability.each do |availability| %>
    <%= render availability %>
  <%= link_to "Edit this day", edit_availability_path(availability) %> |
   <%= link_to "Delete this day", availability_path(availability), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "hover:text-black"  %> 
  <% end %>
</div>

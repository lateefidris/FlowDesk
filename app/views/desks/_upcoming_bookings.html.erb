<div class="flex flex-row justify-between space-x-4">
  <% current_user.desks.bookings.confirmed
                 .sort_by { |booking| booking.appointment }
                 .first(3)
                 .each do |booking| %>
    <div class="border p-4 flex-none">
      <p class="text-sm font-bold"><%= booking.date_format %></p>
      <p class="text-sm"><%= booking.service.name %></p>
      <p class="text-sm"><%= booking.formatted_time_range %></p>
      <%= link_to 'Show booking', booking_path(booking), class: "text-blue-500 hover:text-blue-600" %>
    </div>
  <% end %>
</div>

<div class="max-w-sm mx-auto bg-white border border-gray-200 rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700 overflow-hidden mt-32">
  <%= image_tag("940A9109.jpg", alt: "FlowDesk", class: "w-full h-56 object-cover object-center rounded-t-lg") %>

  <div class="p-6">
    <h1 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= @service.name %></h1>
    <p class="mb-4 font-normal text-gray-700 dark:text-gray-400"><%= @service.description %></p>
    <h2 class="text-lg text-gray-900 dark:text-white">$<%= @service.price %></h2>
    <h3 class="mb-4 text-gray-600 dark:text-gray-400"><%= @service.time_in_hours %></h3>

  
  </div>
</div>

<div class="w-full max-w-2xl mx-auto flex items-center flex-col mt-16">

  <%= render 'desks/client_form', booking: @booking %>

  <%= button_to 'Back to Desk', desk_profile_path(@service.desk.name), method: :get, class: 'text-white bg-orange-600 hover:bg-orange-500 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-sm text-sm px-5 py-2.5 text-center dark:bg-orange-600 dark:hover:bg-orange-800  dark:focus:ring-blue-800 transition duration-300 ease-in-out mt-4' %>
</div>

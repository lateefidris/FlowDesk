<p style="color: green"><%= notice %></p>

<div id="desks" class="flex flex-wrap justify-center border">

  <% if current_user.desks.present? %>
    <div>
      <div>
        <%= render current_user.desks %>
      </div>

      <div>
        <h2 class="bg- bg-black text-center text-4xl uppercase text-orange-100 mt-3 py-3 font-bold">Upcoming Bookings</h2>
        <div>
          <%= render partial: "desks/upcoming_bookings" %>
        </div>
        <%= render partial: "desks/pending_bookings" %>

      </div>
    </div>
    <div class=" flex-grow max-w-2xl my-2 rounded bg-orange-100 border-2 border-black %">

      <%= render partial: "desks/top_services" %>

    </div>
  <% else %>
    <%= link_to "New Desk", new_desk_path %>
  <% end %>
</div>

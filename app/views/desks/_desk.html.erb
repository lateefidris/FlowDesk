<div id="<%= dom_id desk %>">
  <div class="flex flex-col w-full mt-3 items-center relative max-w-3xl">
    <p class="absolute top-0 right-0 m-3">
      <%= link_to image_tag('edit_icon.png', alt: 'Edit desk', width: "30", height: "auto"), edit_desk_path(current_user.desks) %>
    </p>

    <div class="">
       <img src="<%= desk.profile_picture %>" alt="profile picture" class="rounded-full w-72 h-72 lg:w-96 lg:h-96 object-cover">
    </div>

    <h1 class="flex justify-center text-5xl mt-3"><%= current_user.desks.name %></h1>

    <p class="flex justify-center text-orange-600">
      <%= link_to "https://www.Flowdesk.pro/$/#{desk.name}", desk_profile_path(desk.name) %>
    </p>

    <p class="flex justify-center font-bold">
      <%= desk.location %>
    </p>

    <p class="flex justify-center text-center">
      <%= desk.bio %>
    </p>
  </div>
</div>

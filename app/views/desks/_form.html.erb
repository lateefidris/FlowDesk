<%= form_with(model: desk) do |form| %>
  <% if desk.errors.any? %>
    <div class="text-red-600">
      <h2><%= pluralize(desk.errors.count, "error") %> prohibited this desk from being saved:</h2>
      <ul>
        <% desk.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="relative z-0 w-full mb-6 group">
    <%= form.label :name, "Name", class: "block peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6" %>
    <%= form.text_field :name, class: "block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer", placeholder: " ",style: "color:black" %>
  </div>

  <div class="relative z-0 w-full mb-6 group">
    <%= form.label :bio, "Bio", class: "block peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6" %>
    <%= form.text_area :bio, class: "block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer", placeholder: " ",style: "color:black" %>
  </div>

  <div class="relative z-0 w-full mb-6 group">
    <%= form.label :location, "Location", class: "block peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6" %>
    <%= form.text_field :location, class: "block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer", placeholder: " ",style: "color:black" %>
  </div>

  <div class="relative z-0 w-full mb-6 group">
    <%= form.label :profile_picture, "Profile Picture", class: "block peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6" %>
    <%= form.text_field :profile_picture, class: "block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer", placeholder: " ",style: "color:black" %>
  </div>

  <div class="relative z-0 w-full mb-6 group">
    <%= form.hidden_field :professional_id, value: current_user.id %>
  </div>

  <div class="flex flex-row justify-center">
    <div class="flex justify-center">
      <%= form.submit class: "bg-orange-600 hover:bg-orange-700 text-white py-2 px-4 rounded m-2" %>
    </div>
    <div class="flex justify-center space-x-4">
      <%= link_to "Back to desks", desks_path, class: "bg-orange-600 hover:bg-orange-700 text-white py-2 px-4 rounded m-2" %>
    </div>
  </div>
<% end %>


<%= form_with(model: booking) do |form| %>
  <% if booking.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
        <% booking.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
   
    <%= form.hidden_field :desk_id, value: @service.desk.id %>
  </div>

  <div>
   
    <%= form.hidden_field :category_id, value: @service.category.id %>
  </div>

  <div>
    
    <%= form.hidden_field :service_id, value: @service.id %>
  </div>

  <div>
    <%= form.label :client_name, "Your Name",style: "display: block" %>
    <%= form.text_field :client_name %>
  </div>

  <div>
    <%= form.label :client_email, "Your Email", style: "display: block" %>
    <%= form.text_field :client_email %>
  </div>

  <div>
    <%= form.label :appointment, style: "display: block" %>
    <%= form.datetime_field :appointment %>
  </div>

  <div>
    <%= form.submit "Request Booking", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </div>
<% end %>
